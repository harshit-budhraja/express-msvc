{
    "boot": {
        "kafka": false,
        "mysql": false
    },
    "express": {
        "port": 3000,
        "timeout": 30000
    },
    "root_path": "/",
    "api": {
        "versions": {
            "v1.0": {
                "deprecated": false
            }
        }
    },
    "logging": {
        "level": "debug",
        "timezone": "Asia/Kolkata"
    },
    "sequelize": {
        "config": {
            "_meta_desc_": "Get from env: DB_NAME, DB_USERNAME, DB_PASSWORD",
            "dialect": "mysql",
            "host": "localhost"
        }
    },
    "kafka": {
        "global": {
            "clientId": "express-msvc",
            "brokers": ["localhost:9092"],
            "connectionTimeout": 3000
        }
    }
}